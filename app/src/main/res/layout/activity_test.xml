<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestActivity">

    <include
        android:id="@+id/test_toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/allLightsLayout"
        android:layout_below="@+id/test_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/controlAllLightsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Lights"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <Switch
            android:id="@+id/controlSwitchBtnAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allLightsLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/testUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/r1c1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_off"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r1c1_on"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_on"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r1c2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/stage_circle_off"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r1c2_on"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/circle_on"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/r1c3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_off"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r1c3_on"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_on"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:clickable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/r2c1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_off"
                    android:layout_weight="1"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r2c1_on"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_on"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r2c2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_off"
                    android:layout_weight="1"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r2c2_on"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_on"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r2c3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_off"
                    android:layout_weight="1"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r2c3_on"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_on"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:clickable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/r3c1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_off"
                    android:layout_weight="1"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r3c1_on"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_on"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r3c2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_off"
                    android:layout_weight="1"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r3c2_on"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_on"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r3c3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_off"
                    android:layout_weight="1"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/r3c3_on"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_on"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:clickable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/r4c1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/circle_off"
                    android:layout_weight="1"
                    android:clickable="true"/>

